<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/relative"
    android:layout_height="match_parent"
    android:background="@drawable/reg0">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="8sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="REGISTER"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"/>


    <!-- For usernameEditText -->
    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textColorHint="@color/black"
        android:layout_marginTop="320sp"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:drawableLeft="@drawable/ic_username"
        android:textColor="@color/black"
        android:padding="10sp"
        android:inputType="text"
        android:drawablePadding="10dp"
        android:gravity="left"
        android:textSize="16sp"
        />

    <!-- For fullNameEditText -->
    <EditText
        android:id="@+id/fullNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameEditText"
        android:hint="Full name"
        android:textColorHint="@color/black"
        android:layout_marginTop="10sp"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:drawableLeft="@drawable/ic_fullname"
        android:drawablePadding="10dp"

        android:textColor="@color/black"
        android:padding="10sp"
        android:inputType="text"
        android:gravity="left"
        android:textSize="16sp"
        />

    <!-- For emailEditText -->
    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fullNameEditText"
        android:hint="Email"
        android:textColorHint="@color/black"
        android:layout_marginTop="10sp"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:padding="10sp"
        android:inputType="text"
        android:gravity="left"
        android:textSize="16sp"
        />
    <!--password-->

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailEditText"
        android:hint="Password"
        android:textColorHint="@color/black"
        android:layout_marginTop="10sp"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:padding="10sp"
        android:inputType="textPassword"
        android:gravity="left"
        android:textSize="16sp"
        />
    <!---mobile no-->
    <EditText
        android:id="@+id/mobileNoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordEditText"
        android:hint="Mobile no"
        android:textColorHint="@color/black"
        android:layout_marginTop="10sp"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:drawableLeft="@drawable/ic_mobile"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:padding="10sp"
        android:inputType="text"
        android:gravity="left"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/locationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mobileNoEditText"
        android:hint="Location"
        android:textColorHint="@color/black"
        android:layout_marginTop="10sp"
        android:layout_marginStart="40sp"
        android:focusable="false"
        android:layout_marginEnd="40sp"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="10dp"

        android:textColor="@color/black"
        android:padding="10sp"
        android:inputType="text"
        android:gravity="left"
        android:textSize="16sp"
        />


    <Button
        android:id="@+id/registerButton"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="@color/white"
        android:backgroundTint="#2c444e"
        android:layout_below="@+id/locationEditText"
        android:layout_marginStart="140sp"
        android:textSize="20sp"
        android:layout_marginTop="8sp"/>

    <TextView
        android:id="@+id/loginT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Login here"
        android:textColor="@color/black"
        android:layout_below="@id/registerButton"
        android:layout_marginStart="45sp"
        android:textSize="18sp"
        android:layout_marginTop="8sp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />


</RelativeLayout>